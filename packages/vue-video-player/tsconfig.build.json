{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noEmit": true,
    "types": [
      "webpack-env",
      "jest",
      "node",
    ],
    "paths": {
      "@/*": [
        "lib/*"
      ]
    },
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
    ]
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "lib/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "lib/shims-vue.d.ts"
  ]
}